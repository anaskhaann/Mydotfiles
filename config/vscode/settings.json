{
  // Auto-save files after a delay (in milliseconds)
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,

  // Editor display and interaction settings
  "editor.wordWrap": "on",
  "editor.mouseWheelZoom": true,
  "editor.parameterHints.enabled": false,
  "editor.cursorBlinking": "expand",
  "editor.fontFamily": "'JetBrains Mono','Fira Code'",
  "editor.fontSize": 16,
  "editor.formatOnSave": true,
  "editor.minimap.autohide": "mouseover",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.quickSuggestionsDelay": 100,
  "editor.snippetSuggestions": "top",
  "editor.inlineSuggest.fontFamily": "Fira Code",

  // Themes and UI
  "workbench.colorTheme": "Bearded Theme Milkshake Mint", //Light theme
  // "workbench.colorTheme": "Gruvbox Dark Hard", //Dark theme
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  // "workbench.activityBar.location": "default",
  "workbench.settings.editor": "json",
  // "workbench.settings.useSplitJSON": true, //Uncomment when needed

  // File explorer behavior
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // GitHub CoPilot inline enable/disable
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "dotenv": false
  },

  "chat.editor.wordWrap": "on",
  "inlineChat.lineNaturalLanguageHint": false,

  /*
  Python Specific Settings
  */

  // Python File
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.unusedImports": "never",
      "source.organizeImports": "explicit"
    },
    "editor.showUnused": false
  },

  // Venv, Formatting and Others
  "python.venvPath": "${workspaceFolder}",
  "python.defaultInterpreterPath": "d:\\Apps\\Python Main\\python.exe",
  "python.analysis.autoImportCompletions": true,

  "python.useEnvironmentsExtension": true, //Temporary(Remove Later)

  /*
    Jinja templates formatting
    Jinja2, and Django settings
  */
  "djlint.useVenv": false,
  "djlint.pythonPath": "C:\\Users\\anasn\\AppData\\Roaming\\uv\\tools\\djlint\\Scripts\\python",
  "[html][django-html][handlebars][hbs][mustache][jinja][jinja-html][nj][njk][nunjucks][twig]": {
    "editor.defaultFormatter": "monosans.djlint"
  },
  "djlint.ignore": ["H030", "H031", "D004", "H023", "H008"],

  /*
  Terminal Settings
  */
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // Toml File Settings
  "[toml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },

  /*
  Git Workspace
  */
  "git.openRepositoryInParentFolders": "always",

  /*
  Extension Specific Settings
  */

  // Live Server settings
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // Code Runner Settings
  "code-runner.runInTerminal": true,
  "code-runner.clearPreviousOutput": true,
  "code-runner.showExecutionMessage": false,
  "code-runner.ignoreSelection": true,
  "code-runner.enableAppInsights": false,

  // Markdown preview settings
  "markdown-preview-enhanced.previewTheme": "github-dark.css",

  // Docker Settings
  // "[dockercompose]": {
  //   "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  // },

  // Codeium/Windsurf Settings
  "codeium.enableConfig": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "dotenv": false
  },
  "codeium.enableCodeLens": false,
  "codeium.snoozeTime": 1200,
  "codeium.enableExplainProblem": false,

  //Jupyter Notebook settings
  "notebook.formatOnSave.enabled": true,
  "notebook.defaultFormatter": "charliermarsh.ruff",
  "notebook.lineNumbers": "on",
  "notebook.scrolling.revealNextCellOnExecute": "firstLine",
  "notebook.output.wordWrap": true,
  "notebook.output.scrolling": true,

  // Shell script Files settings
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  //To view sqlite in Vs Code
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },

  /*
  Telemetary/Experimental Settings Settings
  */

  // Disable Telemetary and Experimental Features
  "telemetry.telemetryLevel": "off",
  "workbench.enableExperiments": false,
  "window.newWindowProfile": "Default",
  "security.workspace.trust.untrustedFiles": "open",
  "security.allowedUNCHosts": ["wsl.localhost"], //Allows to access files across network
  "mdb.sendTelemetry": false,
  "telemetry.feedback.enabled": false,
  "update.showReleaseNotes": false,
  "mdb.mcp.server": "autoStartDisabled",
  "telemetry.editStats.enabled": false
}
